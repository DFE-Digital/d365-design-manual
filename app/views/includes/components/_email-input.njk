{% macro emailHeaderExample () %}
<div class="govuk-tabs" data-module="govuk-tabs">
  <h2 class="govuk-tabs__title">
    Date input component
  </h2>
  <ul class="govuk-tabs__list">
    <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
      <a class="govuk-tabs__tab" href="#example">
        Example
      </a>
    </li>
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="#html">
        HTML
      </a>
    </li>
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="#liquid">
        Web Template
      </a>
    </li>
  </ul>
  <div class="govuk-tabs__panel" id="example">  
    <div class="govuk-form-group">
      <h1 class="govuk-label-wrapper">
        <label class="govuk-label govuk-label--l" for="schema-name">
          What is your email address?
        </label>
      </h1>
      <div id="schema-name-hint" class="govuk-hint">
        Enter your work email where possible
      </div>
      <p id="schema-name-error" class="govuk-error-message govuk-visually-hidden">
        <span class="govuk-visually-hidden">Error:</span>
      </p>
      <input class="govuk-input" id="schema-name" name="schema-name" type="email" spellcheck="false" autocomplete="email" aria-describedby="schema-name-error schema-name-hint">
    </div>
  </div>
  <div class="govuk-tabs__panel govuk-tabs__panel--hidden" id="html">
    <pre class="code-block">
      <code class="html code-snippet">
&lt;div class="govuk-form-group"&gt;
  &lt;h1 class="govuk-label-wrapper"&gt;
    &lt;label class="govuk-label govuk-label--l" for="<span class="code-highlight">schema-name</span>"&gt;
      What is your email address?
    &lt;/label&gt;
  &lt;/h1&gt;
  &lt;div id="<span class="code-highlight">schema-name</span>-hint" class="govuk-hint"&gt;
    Enter your work email where possible
  &lt;/div&gt;
  &lt;p id="<span class="code-highlight">schema-name</span>-error" class="govuk-error-message govuk-visually-hidden"&gt;
    &lt;span class="govuk-visually-hidden"&gt;Error:&lt;/span&gt;
  &lt;/p&gt;
  &lt;input class="govuk-input" id="<span class="code-highlight">schema-name</span>" name="<span class="code-highlight">schema-name</span>" type="email" spellcheck="false" autocomplete="email" aria-describedby="<span class="code-highlight">schema-name</span>-error <span class="code-highlight">schema-name</span>-hint"&gt;
&lt;/div&gt;
      </code>
    </pre>
  </div>
  <div class="govuk-tabs__panel govuk-tabs__panel--hidden" id="liquid">
    <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-warning-text__assistive">Warning</span>
        This is a basic web template layout and does not include additional liquid items which are common place on a CRM Portal, for example, authenticated user, 
        web role, or parameter checks
      </strong>
    </div>
    <pre class="code-block">
      <code class="html code-snippet">
&#123;% extends 'DfE/Layout/2ColumnWideLeft' %&#125;

&#123;% block title %&#125;&#123;% endblock %&#125;   

&#123;% block main %&#125;

  <span class="code-highlight">## HTML content goes here ##</span>

&#123;% endblock %&#125;
      </code>
    </pre>
  </div>
</div>
{% endmacro %}

